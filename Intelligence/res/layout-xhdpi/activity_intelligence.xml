<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rld_intelli_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bnt_snp" >

    <TextView
        android:id="@+id/txtUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:text="@string/ola_usuario"
        android:textColor="@color/seashell4"
        android:textSize="23sp" />

    <RelativeLayout
        android:id="@+id/rld_intelli_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtUser"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_layouts" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/bem_vindo"
            android:textColor="@color/seashell4"
            android:textSize="23sp" />

		<ImageButton
            android:id="@+id/imgb_historico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgb_digitalizar"
            android:layout_below="@+id/imgb_digitalizar"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/app_name"
            android:onClick="historicoQr"
            android:background="@drawable/selector_tela_intelligence"
            android:src="@drawable/btn5" />

        <ImageButton
            android:id="@+id/imgb_digitalizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            android:onClick="digitalizar"
            android:background="@drawable/selector_tela_intelligence"
            android:src="@drawable/btn1" />
    </RelativeLayout>

</RelativeLayout>